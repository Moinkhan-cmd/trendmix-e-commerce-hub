{
  "name": "trendmix-functions",
  "description": "Firebase Cloud Functions for TrendMix - Razorpay Integration",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "cors": "^2.8.5",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "razorpay": "^2.9.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "typescript": "^5.4.0"
  },
  "private": true
}
